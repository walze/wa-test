generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Lab {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  status Boolean @default(true)
  examId Int?
  Exam   Exam?   @relation(fields: [examId], references: [id])

  @@index([examId], name: "examId")
}

model Exam {
  id       Int      @id @default(autoincrement())
  status   Boolean
  examType String
  type     ExamType @relation(fields: [examType], references: [name])
  Lab      Lab[]

  @@index([examType], name: "examType")
}

model ExamType {
  name String @id
  Exam Exam[]
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lab {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  status Boolean @default(true)

  examId Int?
  Exam   Exam? @relation(fields: [examId], references: [id])
}

model Exam {
  id       Int     @id @default(autoincrement())
  name     String
  status   Boolean
  examType String

  Lab  Lab[]
  type ExamType @relation(fields: [examType], references: [name])
}

model ExamType {
  name String @id

  Exam Exam[]
}
